/*
    Voxel Proxy setup file.
*/


global string $IN_voxelProxy_bifrost;
global string $IN_voxelProxy_gui;
global string $IN_voxelProxy_gui_ops;
global string $IN_voxelProxy_meshlab;
global string $IN_voxelProxy_utils;
global string $IN_voxelProxy_main;

global string $VAR_voxelProxy_documents;
global string $VAR_voxelProxyVAR_appdata;
